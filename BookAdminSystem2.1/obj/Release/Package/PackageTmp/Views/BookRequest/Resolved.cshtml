@model StConlethsBookSystem_v2._1.Models.BookRequestModel

@{
    ViewBag.Title = "Resolved";
}

<div style="text-align:center">
    <h3>Are you sure you want to resolve this request?</h3>
</div>

<div class="col-md-offset-4">    
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.RequestedUser)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RequestedUser)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BookName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BookName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Quantity)
        </dd>            
        @Html.HiddenFor(model => model.ResolvedUser)     
        @Html.HiddenFor(model => model.Resolved)
    </dl>   
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="col-md-offset-5">
        <div class="form-actions no-color row">
            <input type="submit" value="Resolve" class="btn btn-success" /> |
            @Html.ActionLink("Cancel", "Index", "BookRequest", new { @class = "btn btn-danger" })
        </div>
    </div>
    
}