@model StConlethsBookSystem_v2._1.Models.BookDes

@{
    ViewBag.Title = "Delete";
}



<div style="text-align:center;">
    <h3>Are you sure you want to delete all @Model.Title and also unassign and remove all @Model.Title from students accounts?</h3>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

