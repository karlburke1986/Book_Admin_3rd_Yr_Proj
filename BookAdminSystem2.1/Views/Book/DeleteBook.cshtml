@model StConlethsBookSystem_v2._1.Models.BookModels.DeleteBookViewModel

@{
    ViewBag.Title = "DeleteBook";
}

<div style="text-align:center">
    <h2>Barcode: @Model.BarCode</h2>
</div>

<div >
    <div class="alert alert-danger" role="alert" style="text-align:center">
        <h3>Are you sure you want to delete this Book?</h3>
    </div>    
    <dl class="dl-horizontal col-md-offset-4">
        
        <dt>
            @Html.DisplayNameFor(model => model.BookName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BookName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StudentName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StudentName)
        </dd>

        
    </dl>

    

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color row col-md-offset-5">
            <input type="submit" value="Delete" class="btn btn-success" /> |
            @Html.ActionLink("Cancel", "Index", "Book", new { @class = "btn btn-danger" })
        </div>
    }
</div>
@Html.HiddenFor(model => model.ID)
@Html.HiddenFor(model => model.BarCode)