@model IEnumerable<StConlethsBookSystem_v2._1.Models.AdminModels.ViewUsersModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New User", "Register", "Admin", new { @class = "btn btn-success"})    
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Role)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Role)
        </td>
        <td>
            @{if (User.Identity.Name != item.Email)
                {
                    <div class="dropdown">
                        <button class="btn btn-success dropdown-toggle" type="button" data-toggle="dropdown">
                            Options
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("RemoveUser", "Admin", new { id = item.ID })">Delete</a></li>                            
                            <li><a href="@Url.Action("ResetPassword", "Admin", new { id = item.ID })">Reset Password</a></li>
                        </ul>
                    </div>
                }
            }
        </td>
    </tr>
}

</table>
