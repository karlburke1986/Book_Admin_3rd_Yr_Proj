@model StConlethsBookSystem_v2._1.Models.AdminModels.RemoveUserViewModel

@{
    ViewBag.Title = "RemoveUser";
}


    <div class="row" style="text-align: center; padding-bottom: 20px;">
        <h3>Are you sure you want to delete @Model.Email?</h3>
    </div>

    <div>
        @Html.HiddenFor(model => model.ID)      


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()


            <div class="form-actions no-color">
                <div class="row">
                    <div class="col-md-offset-5 col-md-1" style="padding-right: 0px;">
                        <input type="submit" value="Yes" class="btn btn-success"/>   |
                    </div>
                    <div class="" style="padding-left: 0px;">
                       @Html.ActionLink("No", "Index", "Admin", new { @class = "btn btn-danger" })
                    </div>

                </div>
            </div>
        }
    </div>

